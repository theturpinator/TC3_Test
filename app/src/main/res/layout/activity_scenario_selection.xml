<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFAFAF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/main_header"
        android:orientation="vertical"></LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/left"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/backButton"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_button"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/group_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/group_number_text"
                android:layout_marginStart="80dp"/>

            <Spinner
                android:id="@+id/group_number_dropdown"
                android:layout_toEndOf="@+id/group_number_text"
                android:layout_alignBottom="@+id/group_number_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:layout_alignParentTop="true"
                android:spinnerMode="dialog"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/date_text"
                android:layout_toEndOf="@+id/group_number_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/date_text"
                android:layout_marginStart="110dp"/>

            <EditText
                android:layout_marginLeft="20dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:hint="mm/dd/yyyy"
                android:paddingLeft="5dp"
                android:padding="3dp"
                android:editable="false"
                android:id="@+id/editText"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/date_text"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="150dp">

                <LinearLayout
                    android:layout_marginTop="50dp"
                    android:layout_height="50dp"
                    android:layout_width="100dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/virtual"
                    ></LinearLayout>

                <Button
                    android:id="@+id/vbsB1button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gold_button"
                    android:layout_marginBottom="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="VBS B1"/>

                <Button
                    android:id="@+id/vbsB2button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gold_button"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="VBS B2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="100dp">

                <LinearLayout
                    android:layout_marginTop="50dp"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/live"
                    android:orientation="vertical"></LinearLayout>

                <Button
                    android:id="@+id/liveM1button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_button"
                    android:layout_marginBottom="3dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="Live M1"/>

                <Button
                    android:id="@+id/liveM2button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_button"
                    android:textColor="#000"
                    android:layout_marginBottom="3dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="Live M2"/>

                <Button
                    android:id="@+id/liveM3button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_button"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="Live M3"/>
            </LinearLayout>

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"></GridLayout>

    </RelativeLayout>

</LinearLayout>