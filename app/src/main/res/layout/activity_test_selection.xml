<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AFAFAF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#ffa406">

                <Button
                    android:id="@+id/menu_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/menu_button"/>

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/logo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Home"/>

                <Button
                    android:id="@+id/testselection_save_and_exit"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="605dp"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:background="@drawable/save_and_exit"/>



            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="380dp"
                android:background="@drawable/tc3_center_test_select">


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:layout_marginRight="200dp"
                    android:id="@+id/backButton"
                    android:layout_width="@dimen/back_button_width"
                    android:layout_height="@dimen/back_button_height"
                    android:background="@drawable/back_button"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BSS"/>

                    <ImageView
                        android:id="@+id/bss_complete_checkmark"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/observed_checkmark_grey"/>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KCT"/>

                    <ImageView
                        android:id="@+id/kct_complete_checkmark"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/observed_checkmark_grey"/>
                        </LinearLayout>

                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TAP"/>

                    <ImageView
                        android:id="@+id/tap_complete_checkmark"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/observed_checkmark_grey"/>
                        </LinearLayout>

                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TCM"/>

                    <ImageView
                        android:id="@+id/tcm_complete_checkmark"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/observed_checkmark_grey"/>
                        </LinearLayout>

                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TEM"/>
                    <ImageView
                        android:id="@+id/tem_complete_checkmark"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/observed_checkmark_grey"/>
                        </LinearLayout>

                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TPM"/>

                    <ImageView
                        android:id="@+id/tpm_complete_checkmark"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/observed_checkmark_grey"/>
                        </LinearLayout>

                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SJT"/>

                    <ImageView
                        android:id="@+id/sjt_complete_checkmark"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/observed_checkmark_grey"/>

                        </LinearLayout>
                </LinearLayout>

                <Button
                    android:layout_marginLeft="180dp"
                    android:id="@+id/nextButton"
                    android:layout_width="@dimen/next_button_width"
                    android:layout_height="@dimen/next_button_height"
                    android:background="@drawable/next_button"/>

            </LinearLayout>


        </LinearLayout>






    </FrameLayout>

    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
              android:layout_width="350dp"
              android:layout_height="wrap_content"
              android:layout_gravity="start"
              android:layout_marginTop="71dp"
              android:choiceMode="singleChoice"
              android:divider="#666"
              android:dividerHeight="1dp"
              android:background="#ffa406"
              android:paddingLeft="15sp"
              android:paddingRight="15sp"
        />

</android.support.v4.widget.DrawerLayout>
